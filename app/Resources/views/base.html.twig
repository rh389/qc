<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% include 'BraincraftedBootstrapBundle::_stylesheets.html.twig' %}
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>


</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">Quality Conveyors</a>
            <!--/.nav-collapse -->
            {{ knp_menu_render('QCAppBundle:Builder:mainMenu', {'nav_type': 'navbar'}) }}
        </div>
    </div>
</div>

{% if app.session.hasFlash('notice') %}
    <div class="flash-notice">
        {{ app.session.flash('notice') }}
    </div>
{% endif %}

<div class="container">
    {% block body %}{% endblock %}
</div>

</body>
{% javascripts
    '@QCAppBundle/Resources/js/jquery-1.8.3.min.js'
    '@QCAppBundle/Resources/js/AjaxForms.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script src="/bundles/braincraftedbootstrap/js/bootstrap.js"></script>
{% block javascripts %}{% endblock %}
</html>